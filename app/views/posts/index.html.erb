<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th>Tags</th>
      <th>Materia</th>
      <th>Descripcion</th>
      <th>Orden</th>
      <th>Tiempo</th>
      <th>Contenido</th>
      <th>Bibliografia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titulo %></td>
        <td><%= post.autor %></td>
        <td><%= post.tags %></td>
        <td><%= post.materia_id %></td>
        <td><%= post.descripcion %></td>
        <td><%= post.orden %></td>
        <td><%= post.tiempo %></td>
        <td><%= post.contenido %></td>
        <td><%= post.bibliografia %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
