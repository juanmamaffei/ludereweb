  .card.marco
    %h3.center Objetivos
    %p  
      Luego de recorrer este material, podrás:
    
    = raw @materium.objetivos

.container
  .card.marco
    %h3.center Bibliografía
      
    = raw @materium.bibliografia

.container
  .card.marco
    %h3.center Evaluación
      
    = @materium.evaluacion